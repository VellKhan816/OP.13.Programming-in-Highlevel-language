import sys
from PyQt6.QtWidgets import *
from PyQt6.QtCore import Qt

class ProductCard(QWidget):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Карточка товара")
        self.resize(800, 300)
        self.setup_ui()

    def setup_ui(self):
        layout = QHBoxLayout()
        layout.setContentsMargins(5, 5, 5, 5)
        layout.setSpacing(10)

        photo = QLabel("Фото")
        photo.setAlignment(Qt.AlignmentFlag.AlignCenter)
        photo.setFixedSize(200, 200)
        photo.setStyleSheet("""
            border: 2px solid white;
            padding: 10px;
            font-size: 16px;
            background-color: black;
        """)

        info = QLabel(
            "Электроника | Умные часы X1\n"
            "Описание товара: Сердечный ритм, GPS, водонепроницаемость\n"
            "Производитель: TechCorp\n"
            "Поставщик: ГлобалТрейд\n"
            "Цена: 9 990 ₽\n"
            "Единица измерения: шт.\n"
            "Количество на складе: 15"
        )
        info.setFrameShape(QFrame.Shape.Box)
        info.setFrameShadow(QFrame.Shadow.Plain)
        info.setLineWidth(2)
        info.setContentsMargins(10, 10, 10, 10)
        info.setMinimumWidth(200)

        # --- Правая колонка: Скидка ---
        discount = QLabel("Персональная\nскидка: 15%")
        discount.setAlignment(Qt.AlignmentFlag.AlignCenter)
        discount.setFixedSize(150, 200)
        discount.setStyleSheet("""
            border: 2px solid black;
            padding: 10px;
            font-size: 14px;
            text-align: center;
        """)

        layout.addWidget(photo)
        layout.addWidget(info)
        layout.addWidget(discount)

        self.setLayout(layout)


if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = ProductCard()
    window.show()
    sys.exit(app.exec())
